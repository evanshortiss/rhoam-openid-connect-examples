<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta
      name="description"
      content="{{site.description}}"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <title>{{site.title}}</title>
  </head>
  <body>
    <body>
      <div class="max-w-screen-lg px-8 pt-6 mx-auto">
        <header class="flex w-full items-center pb-3 border-b border-blue-300">
          <div class="flex">
            <h2 class="text-2xl">
              <img class="h-12 p-2 inline-block animate-bounce" src="public/logo.png" alt="Node.js Logo" />
              Server-Side API Products Store
            </h2>
          </div>
          <div class="flex-1"></div>
          {{#if loggedIn}}
            <a href='/logout' class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Logout</a>
          {{else}}
            <a href='/login' class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Login</a>
          {{/if}}
        </header>
        {{{body}}}
      </div>
    </body>
  </body>
</html>
