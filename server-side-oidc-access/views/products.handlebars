<div>
  <div>
    <div class="grid grid-cols-5 gap-4 py-4">
      <h2 class="text-2xl text-gray-500 col-span-4">
        Products
      </h2>
      <h2 class="text-2xl text-gray-500 col-span-1 text-right">
        Price
      </h2>
    </div>
    {{#each products}}
      <div class="grid grid-cols-5 gap-4 border-t pb-2 mb-4">
        <div class="col-span-4 pr-4">
          <h3 class="font-semibold pb-2 pt-2">{{name}}</h3>
          <p class="text-gray-700">{{description}}</p>
        </div>
        <div class="col-span-1 flex items-start text-right">
          <p class="font-semibold text-gray-700 w-full pt-2">${{price}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>
